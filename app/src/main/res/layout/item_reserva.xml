<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="14dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:orientation="vertical">

        <!-- ========================= -->
        <!-- TITULO ALOJAMIENTO -->
        <!-- ========================= -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salón Los Aromosa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <!-- Localidad -->
        <TextView
            android:id="@+id/tvLocalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juana Koslay"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp"/>

        <!-- ========================= -->
        <!-- PERSONA (Cliente / Propietario) -->
        <!-- ========================= -->
        <TextView
            android:id="@+id/tvPersona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente: Juan Pérez"
            android:textSize="13sp"
            android:textColor="#444444"
            android:layout_marginTop="6dp"/>

        <!-- ========================= -->
        <!-- FECHAS -->
        <!-- ========================= -->
        <TextView
            android:id="@+id/tvFechas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/12/2025 → 21/12/2025"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="6dp"/>

        <!-- ========================= -->
        <!-- MONTO -->
        <!-- ========================= -->
        <TextView
            android:id="@+id/tvMonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$40.000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#00796B"
            android:layout_marginTop="4dp"/>

        <!-- ========================= -->
        <!-- ESTADO -->
        <!-- ========================= -->
        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendiente de pago"
            android:textSize="13sp"
            android:textStyle="italic"
            android:textColor="#FF9800"
            android:layout_marginTop="4dp"/>

        <!-- ========================= -->
        <!-- BOTONES -->
        <!-- ========================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Cancelar"
                android:textSize="13sp"
                android:backgroundTint="#D32F2F"
                android:textColor="@android:color/white"
                android:paddingHorizontal="16dp"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnPagar"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Pagar"
                android:textSize="13sp"
                android:backgroundTint="#00796B"
                android:textColor="@android:color/white"
                android:paddingHorizontal="16dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
